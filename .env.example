# National Park Service API Configuration
NPS_API_KEY=your_nps_api_key_here

# Optional Configuration
NPS_API_BASE_URL=https://developer.nps.gov/api/v1

# Geocoding (Nominatim)
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=NationalParksMCP/1.0 (contact@example.com)
NOMINATIM_CONTACT_EMAIL=contact@example.com

# Weather
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
OPENMETEO_BASE_URL=https://api.open-meteo.com/v1

# Air Quality
AIRVISUAL_API_KEY=your_airvisual_api_key_here
AIRVISUAL_BASE_URL=https://api.airvisual.com/v2

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_JSON=false  # Set to true for JSON-formatted logs (useful for log aggregation)
LOG_INCLUDE_TIMESTAMP=true  # Set to false to disable timestamps in logs

SERVER_NAME=National Parks
